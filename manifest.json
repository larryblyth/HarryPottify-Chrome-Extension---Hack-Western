{
    "manifest_version": 2,
    "name": "whand",
    "description": "WAND + HAND",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["style.css"],
            "js": ["jquery-2.1.3.min.js", "leap-0.6.3.js", "leap-plugins-0.1.10.js", "wand.js"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        "Wingdings.ttf",
        "unicorn0.png",
        "unicorn1.png"
    ],
    "permissions": [
        "fontSettings",
        "http://*/",
        "https://*/"
    ]
}
